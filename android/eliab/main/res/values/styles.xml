<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="et_reservation" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name= "android:background">@drawable/round_btn</item>
    </style>

    <style name="res_buttons" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name= "android:background">@drawable/btn_r</item>
    </style>
    <style name="cards">
        <item name = "android:layout_gravity">center</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">100dp</item>
        <item name = "android:layout_marginLeft">15dp</item>
        <item name = "android:layout_marginRight">15dp</item>
        <item name = "android:layout_marginBottom">15dp</item>
    </style>

</resources>
